        android:layout_height="wrap_content"
        android:text="Wallpaper"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="10dp" />

    <Button android:id="@+id/btnPickGallery"
        android:layout_width="match_parent" android:layout_height="36dp"
        android:text="Pick from Gallery"
        android:textSize="11sp"
        android:layout_marginBottom="6dp" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Presets" android:textColor="#AAAAAA" android:textSize="10sp"
        android:layout_marginBottom="4dp" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center">

        <Button android:id="@+id/btnPreset1"
            android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
            android:text="ðŸŒŒ Space" android:textSize="10sp" android:layout_marginEnd="2dp" />
        <Button android:id="@+id/btnPreset2"
            android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
            android:text="ðŸŒŠ Ocean" android:textSize="10sp" android:layout_marginEnd="2dp" />
        <Button android:id="@+id/btnPreset3"
            android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
            android:text="ðŸŒ² Forest" android:textSize="10sp" />
    </LinearLayout>

    <Button android:id="@+id/btnCancel"
        android:layout_width="match_parent" android:layout_height="36dp"
        android:text="Cancel"
        android:layout_marginTop="8dp"
        android:textSize="11sp" />

</LinearLayout>
