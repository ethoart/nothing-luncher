<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/missRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- GIF fills FULL SCREEN — center crop so nothing is cut awkwardly -->
    <ImageView
        android:id="@+id/missGifView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Miss Minutes" />

    <!-- Time overlay top-center (drawn on frame too, this is backup) -->
    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="4dp"
        android:text="00:00"
        android:textColor="#FFAA00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:shadowColor="#AA000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:visibility="gone" />

    <!-- Status chip top-right -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_status_chip"
        android:textColor="#FF8C00"
        android:textSize="6sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="TAP TO TALK" />

    <!-- Speech bubble — bottom, amber TVA style -->
    <TextView
        android:id="@+id/speechBubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_speech_bubble"
        android:textColor="#1A0800"
        android:textSize="8sp"
        android:padding="8dp"
        android:gravity="center"
        android:maxLines="4"
        android:ellipsize="end"
        android:visibility="gone"
        android:text="" />

</FrameLayout>
